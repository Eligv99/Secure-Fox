        var uname = $("#uname").text();
      
        var first = $("#firstpage").val();
        $('#second').text(first);
        $("#firstpage").val('');
        
        alert("Attempting to save in db");

        $.ajax({
          type: "POST",
          url: "/api/entry",
          data: {
            entry: first,
            user: uname
          }
       });
     });
